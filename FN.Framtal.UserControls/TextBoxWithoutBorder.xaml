<UserControl x:Class="FN.Framtal.UserControls.TextBoxWithoutBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FN.Framtal.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="755">
    <TextBox x:Name="TextBox" Text="{Binding Text}" x:FieldModifier="public" Background="Transparent" BorderBrush="Transparent" Grid.Column="1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextChanged="TextBox_TextChanged" />
</UserControl>
